
{% extends 'layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/selectplayer.css">
{% endblock %}

{% block content %}
    <div class="container">
    <h1>Selectionnez votre personnage</h1>

    <div class="row">
        <div class="col-xs-6 player1">
            <span><h2 id="name1">Joueur 1 </h2></span>
        </div>
        <div class="col-xs-6 player2 text-right">
            <span><h2 id="name2">Joueur 2</h2></span>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4 player1">
            <img id="player1-image" src="assets/images/choose_character.jpg" data="" class="img-responsive" alt="player one">
        </div>
        <div class="col-xs-4 text-center">
            <form action="" method="post" id="form">
                <input type="hidden" name="players[]" id="player1" value="">
                <input type="hidden" name="players[]" id="player2" value="">
                <button type="button" class="btn btn-primary" id="valid">Valider</button>
            </form>
        </div>
        <div class="col-xs-4 player2">
            <img id="player2-image" src="assets/images/choose_character_mirror.jpg" data="" class="img-responsive" alt="player one">
        </div>
    </div>


    <div class="row select_thumb">
    {% for hero in heroes %}
        <div class="col-xs-4 col-md-1">
            <a href="#" class="thumbnail" id="{{ hero.id }}" data="{{ hero.name }}">
                <img src="{{ hero.images.sm }}" alt="{{ hero.name }}">
            </a>
        </div>
    {% endfor %}
    </div>

    </div>
{% endblock %}
{% block javascript %}
    {{ parent() }}
    <script src="assets/js/selectplayer.js"></script>
{% endblock %}